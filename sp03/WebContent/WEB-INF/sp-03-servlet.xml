<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<!-- HandlerMapping -->
	<bean id="handlerMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<value>
				/board_write.do=boardAction
				/board_write_ok.do=boardAction
				/board_list.do=boardAction
				/board_cont.do=boardAction
				/board_edit_ok.do=boardAction
				/board_del_ok.do=boardAction
			</value>
		</property>
	</bean>

	<!-- Controller -->
	<bean id="boardAction" class="action.BoardAction"
	p:boardService-ref="boardService" />
	<!-- p:boardService-ref="boardService" BoardAction.java 
	  컨트롤 클래스에서 스프링의 setter DI 의존관계를 만들어야 한다. -->
	
	
	<!-- ViewResolver -->
	<bean id="internalResourceViewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass">
			<value>org.springframework.web.servlet.view.JstlView</value>
		</property>
		<property name="prefix">
			<value>jsp/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>
	<!-- 뷰페이지 폴더와 파일 확장자 설정. prefix value값이 
	폴더가 된다. 폴더 경로가 jsp 가 된다. suffix value 값이 .jsp
	뷰페이지 파일 확장자가 된다. -->
</beans>


